		
<section>

	<% unless current_user %>

		<%= partial :"partials/sign_in_form" %>

		<%= partial :"partials/sign_up_form" %>
		
		<section>
			<h1>Welcome to Chitter.</h1>
			<p>Start a conversation, explore your interests, and be in the know.</p>
		</section>

	 <% end %>

	<% if current_user %>	
		<form action="/" method="POST">
			<input type="text" name="cheep">
				<button type="submit">Cheep!</button>
		</form>
	<% end %>	
		
	<% @cheeps.each do |cheep| %>
		<li><%= cheep.cheep %>
			<%= cheep.created_at %></li>
			<%= cheep.user.name %>
	<% end %>

</section>
